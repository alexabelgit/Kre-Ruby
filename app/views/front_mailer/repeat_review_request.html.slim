= content_for :sender
  = @store.name

= content_for :branding
  = render 'layouts/front/store_branding', store: @store

= content_for :excuse
  = t('review_request_html',
      scope:        'front.mailer.excuses',
      helpfulcrowd: link_to('HelpfulCrowd', 'https://www.helpfulcrowd.com'),
      store:        "<b>#{ @store.name }</b>".html_safe)

== @store.settings(:reviews).repeat_review_request_mail_body.parse_placeholders( @store.promotions.placeholders_hash.merge(Placeholders::REVIEW_REQUEST_MAIL_BODY), self, true, true, @review_request)
